{
	"compilerOptions": {
		"target": "ESNext",
		"isolatedModules": true,
		"lib": ["ESNext", "DOM"],
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"noUnusedLocals": true,
		"noPropertyAccessFromIndexSignature": true,
		"noImplicitReturns": true,
		"strict": true,
		"declaration": true,
		"esModuleInterop": true,
		"rootDir": "src",
		"outDir": "dist/"
	},
	"exclude": ["src/**/*.test.ts"]
}
