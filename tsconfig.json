{
  "compilerOptions": {
    "target": "es2020",
    "isolatedModules": true,
    "lib": ["es2020"],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "strict": true,
    "declaration": true,
    "rootDir": "src",
    "outDir": "dist"
  }
}
